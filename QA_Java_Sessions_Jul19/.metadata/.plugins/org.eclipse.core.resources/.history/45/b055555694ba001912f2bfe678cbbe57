package iodemos;

import java.io.File;
import java.io.FileReader;

public class ReadWriteFile {

	File f;
	
	public ReadWriteFile() {
	this.f=new File("f1.txt");
	}
	public void toRead(){
		
	FileReader fr=new FileReader(f);
	int ch=fr.read();
	while(ch!=-1){
		System.out.println((char)ch);
	ch=fr.read();
	}
		
	}
	
	public void toWrite(){
		
	}
	
}
